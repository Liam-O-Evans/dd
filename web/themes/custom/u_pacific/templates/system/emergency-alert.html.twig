{#
/**
 * @file
 * Theme override to display an emergency_alert.
 *
 * Available variables:
 * - title
 * - message
 * - alert_level
 * - alert_on
 *
 */
#}
{%
  set classes = [
    'emergency-alert',
    alert_level,
    (alert_level == 'announcement')? 'closeable'
  ]
%}
{% if alert_on %}
<div{{ attributes.addClass(classes) }} >
<div class="container">
<div class="inner">
  {% if 'closeable' in classes %}
  	<button class="close-button" aria-label="Close alert" type="button" data-close>
    	<span aria-hidden="true">&times;</span>
  	</button>
  {% endif %}
  <span class="title">{{ title }}</span>
  {{ message }}
</div>
</div>
</div>
{% endif %}
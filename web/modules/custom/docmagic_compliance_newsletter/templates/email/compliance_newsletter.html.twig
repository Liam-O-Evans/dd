{% filter inky|inline_css(source('@assets/css/foundation-emails.css')|replace({
    'padding-left: 16px;': 'padding-left: 40px;',
    'padding-right: 16px;': 'padding-right: 40px;',
}), source('@assets/css/compliance_newsletter.css')) %}
<html>
<head>
<!--[if gte mso 9]><xml>
<o:OfficeDocumentSettings>
<o:AllowPNG/>
<o:PixelsPerInch>96</o:PixelsPerInch>
</o:OfficeDocumentSettings>
</xml><![endif]-->
<title>DocMagic</title>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<meta name="viewport" content="width=device-width, initial-scale=1.0 " />
<meta name="format-detection" content="telephone=no"/>
<!--[if !mso]><!-->
<link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900">
<!--<![endif]-->
<style type="text/css">
@import url('https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900');
</style>
<!--[if mso]>
<style type="text/css">
body,
table.body,
h1,
h2,
h3,
h4,
h5,
h6,
p,
td,
th,
a {
font-family: Arial, sans-serif !important;
}
table.button table td a {
font-family: Arial, sans-serif !important;
}
[style*="Roboto"] {
font-family: Arial, sans-serif !important;
}
</style>
<![endif]-->
</head>
<body>
<!--[if !mso]><!-->
<link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900">
<!--<![endif]-->
<style type="text/css">
@import url('https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900');
</style>
<wrapper class="body">
<spacer size="10"></spacer>
<container>
    <wrapper class="content-wrapper">
        <img src="{{ base_url ~ '/modules/custom/docmagic_compliance_newsletter/assets/img/banner.gif' }}" width="651" style="width:6.7833in" />
        <row class="header">
{#            <columns style="background: url('{{ base_url ~ '/modules/custom/docmagic_compliance_newsletter/assets/img/banner-check.gif' }}') no-repeat;" bgcolor="#5d2e91">#}
            <columns bgcolor="#5d2e91">
                {#
                <!--[if gte mso 9]>
                <v:rect xmlns:v="urn:schemas-microsoft-com:vml" fill="true" stroke="false" style="width:650px;height:257px;">
                <v:fill type="tile" src="{{ base_url ~ '/modules/custom/docmagic_compliance_newsletter/assets/img/banner-check.gif' }}" color="#5d2e91" />
                <v:textbox inset="0,0,0,0">
                <![endif]-->
                <spacer size="27"></spacer>
                <a href="https://www.docmagic.com" class="logo">
                    <img src="{{ base_url ~ '/modules/custom/docmagic_compliance_newsletter/assets/img/logo.png' }}" alt="DocMagic" width="150" height="27" />
                </a>
                <spacer size="50"></spacer>
                <center>
                    <h1 class="huge title">
                        <span class="prefix">The</span><!--[if mso]><br /><![endif]-->
                        <span class="text">Compliance <em>Edge</em><sup>TM</sup></span>
                    </h1>
                </center>
                <spacer size="60"></spacer>
                <!--[if gte mso 9]>
                </v:textbox>
                </v:rect>
                <![endif]-->
                #}
                <p class="volume">{{ month }} {{ year }} Edition</p>
                <spacer size="1" class="volume-line"></spacer>
                <spacer size="15"></spacer>
                <h3 class="title">{{ content.article_of_the_month.title }}</h3>
                <p>{{ content.article_of_the_month.description|raw|replace({'<p>': '', '</p>': ''})|raw }} <a href="{{ content.article_of_the_month.url }}">Learn More</a></p>
            </columns>
        </row>
        <spacer size="25"></spacer>
        <row class="legal-and-regulatory-updates">
            <columns>
                <row class="section-header-row">
                    <columns small="1" large="1">
                        <img src="{{ base_url ~ '/modules/custom/docmagic_compliance_newsletter/assets/img/icon-legal-and-regulatory-updates.png' }}" />
                    </columns>
                    <columns small="11" large="11">
                        <spacer size="5"></spacer>
                        <h2 class="section-header with-image">
                            <span>Legal and Regulatory Updates</span>
                        </h2>
                    </columns>
                </row>
                {% for index,item in content.legal_and_regulatory_updates %}
                    {% if not loop.first %}
                        <spacer size="20"></spacer>
                    {% endif %}
                    <row>
                        {% if index is odd %}
                            <columns small="1" large="1" valign="top">
                                <center>
                                    <img src="{{ base_url ~ '/modules/custom/docmagic_compliance_newsletter/assets/img/icon-speaker-pointing-right.png' }}" />
                                </center>
                            </columns>
                        {% endif %}
                        <columns small="11" large="11" class="border-box">
                            <row>
                            <columns small="11" large="11" class="content-box">
                            <div class="content-box">
                                <h3 class="title">
                                    <a href="{{ item.link }}">{{ item.title }}</a>
                                </h3>
                                {{ item.description|raw }}
                                <spacer size="4"></spacer>
                                <p class="subscription-status">
                                    {% if item.is_subscription_required %}
                                        <img src="{{ base_url ~ '/modules/custom/docmagic_compliance_newsletter/assets/img/icon-lock-grey.png' }}" />
                                        <span>Subscription Required</span>
                                    {% else %}
                                        <span>Complimentary</span>
                                    {% endif %}
                                </p>
                            </div>
                            </columns>
                            </row>
                        </columns>
                        {% if index is even %}
                            <columns small="1" large="1" valign="top">
                                <center>
                                    <img src="{{ base_url ~ '/modules/custom/docmagic_compliance_newsletter/assets/img/icon-speaker-pointing-left.png' }}" />
                                </center>
                            </columns>
                        {% endif %}
                    </row>
                {% endfor %}
            </columns>
        </row>
        <spacer size="16"></spacer>
        <row class="compliance-term-of-the-month" bgcolor="#179e71">
            <columns small="4" large="4" class="image-left" valign="middle">
                <spacer size="16"></spacer>
                <img src="{{ base_url ~ '/modules/custom/docmagic_compliance_newsletter/assets/img/aside-compliance-term-of-the-month.png' }}" />
            </columns>
            <columns small="8" large="8">
                <spacer size="40"></spacer>
                <h2 class="mini section-header">Compliance Term of the Month</h2>
                <h3 class="title">{{ content.compliance_term_of_the_month.title }}</h3>
                {{ content.compliance_term_of_the_month.description|raw }}
            </columns>
        </row>
        <spacer size="16"></spacer>
        <row class="form-updates">
            <columns>
                <row class="section-header-row">
                    <columns small="1" large="1">
                        <img src="{{ base_url ~ '/modules/custom/docmagic_compliance_newsletter/assets/img/icon-form-updates.png' }}" />
                    </columns>
                    <columns small="11" large="11" valign="middle">
                        <spacer size="5"></spacer>
                        <h2 class="section-header with-image">
                            <span>Form Updates</span>
                        </h2>
                    </columns>
                </row>
                {% for index,item in content.form_updates %}
                    <row>
                        <columns>
                            <h3 class="title">
                                <a href="{{ item.link }}">{{ item.title }}</a>
                            </h3>
                            {{ item.description|raw }}
                            <spacer size="4"></spacer>
                            <p class="subscription-status">
                                {% if item.is_subscription_required %}
                                    <img src="{{ base_url ~ '/modules/custom/docmagic_compliance_newsletter/assets/img/icon-lock-white.png' }}" />
                                    <span>Subscription Required</span>
                                {% else %}
                                    <span>Complimentary</span>
                                {% endif %}
                            </p>
                        </columns>
                    </row>
                {% endfor %}
            </columns>
        </row>
        <row class="upcoming-event" bgcolor="#5d2e91">
            <columns small="8" large="8">
                <spacer size="40"></spacer>
                <h2 class="mini section-header">Upcoming Event</h2>
                <h3 class="title">{{ content.upcoming_event.title }}</h3>
                {{ content.upcoming_event.description|raw }}
                <button class="event-sign-up" href="{{ content.upcoming_event.url }}">Sign Up Today!</button>
            </columns>
            <columns small="4" large="4" class="image-right" valign="middle">
                <spacer size="16"></spacer>
                <img src="{{ base_url ~ '/modules/custom/docmagic_compliance_newsletter/assets/img/aside-upcoming-event.png' }}" />
            </columns>
        </row>
        <spacer size="16"></spacer>
        <row class="system-updates">
            <columns>
                <row class="section-header-row">
                    <columns small="1" large="1">
                        <img src="{{ base_url ~ '/modules/custom/docmagic_compliance_newsletter/assets/img/icon-system-updates.png' }}" />
                    </columns>
                    <columns small="11" large="11" valign="middle">
                        <spacer size="10"></spacer>
                        <h2 class="section-header with-image">
                            <span>System Updates</span>
                        </h2>
                    </columns>
                </row>
                <row>
                    <columns small="4" large="4" class="revised-audits">
                        <div class="border-box">
                            <div class="content-box">
                                <center>
                                    <a href="https://www.docmagic.com/compliance/compliance-articles/automated-compliance/audits" class="update">
                                        <!--[if mso]><br /><![endif]-->
                                        <img src="{{ base_url ~ '/modules/custom/docmagic_compliance_newsletter/assets/img/icon-revised-audits.png' }}" />
                                        <br /><!--[if mso]><br /><![endif]-->
                                        <span>Revised Audits</span>
                                        <!--[if mso]><br /><br /><![endif]-->
                                    </a>
                                </center>
                            </div>
                        </div>
                    </columns>
                    <columns small="4" large="4" class="software-releases">
                        <div class="border-box">
                            <div class="content-box">
                                <center>
                                    <a href="https://www.docmagic.com/release-notes" class="update">
                                        <!--[if mso]><br /><![endif]-->
                                        <img src="{{ base_url ~ '/modules/custom/docmagic_compliance_newsletter/assets/img/icon-software-releases.png' }}" />
                                        <br /><!--[if mso]><br /><![endif]-->
                                        <span>Software Releases</span>
                                        <!--[if mso]><br /><br /><![endif]-->
                                    </a>
                                </center>
                            </div>
                        </div>
                    </columns>
                    <columns small="4" large="4" class="system-status">
                        <div class="border-box">
                            <div class="content-box">
                                <center>
                                    <a href="https://www.docmagic.com/webservices/status/main.jsp" class="update">
                                        <!--[if mso]><br /><![endif]-->
                                        <img src="{{ base_url ~ '/modules/custom/docmagic_compliance_newsletter/assets/img/icon-system-status.png' }}" />
                                        <br /><!--[if mso]><br /><![endif]-->
                                        <span>System Status</span>
                                        <!--[if mso]><br /><br /><![endif]-->
                                    </a>
                                </center>
                            </div>
                        </div>
                    </columns>
                </row>
            </columns>
        </row>
        <row class="footer">
            <columns>
                <spacer size="30"></spacer>
                <p class="social">
                    <a href="https://api.addthis.com/oexchange/0.8/forward/linkedin/offer?url=https%3A%2F%2Fwww.docmagic.com%2F&pubid=ra-5cef254f38694463&title=DocMagic&ct=1">
                        <img src="{{ base_url ~ '/modules/custom/docmagic_compliance_newsletter/assets/img/btn-linkedin-share.png' }}" alt="LinkedIn: Share" />
                    </a>
                    <a href="https://api.addthis.com/oexchange/0.8/forward/twitter/offer?url=https%3A%2F%2Fwww.docmagic.com%2F&pubid=ra-5cef254f38694463&title=DocMagic&ct=1">
                        <img src="{{ base_url ~ '/modules/custom/docmagic_compliance_newsletter/assets/img/btn-twitter-tweet.png' }}" alt="Twitter: Tweet" />
                    </a>
                    <a href="https://api.addthis.com/oexchange/0.8/forward/facebook/offer?url=https%3A%2F%2Fwww.docmagic.com%2F&pubid=ra-5cef254f38694463&title=DocMagic&ct=1">
                        <img src="{{ base_url ~ '/modules/custom/docmagic_compliance_newsletter/assets/img/btn-facebook-share.png' }}" alt="Facebook: Share" />
                    </a>
                    <a href="https://api.addthis.com/oexchange/0.8/forward/email/offer?url=https%3A%2F%2Fwww.docmagic.com%2F&pubid=ra-5cef254f38694463&title=DocMagic&ct=1">
                        <img src="{{ base_url ~ '/modules/custom/docmagic_compliance_newsletter/assets/img/btn-email-to-friend.png' }}" alt="Email to Friend" />
                    </a>
                </p>
                <spacer size="4"></spacer>
                <p>&copy; {{ 'now'|date('Y') }} DocMagic | 1800 W. 213th St, Torrance California 90501 | (800) 649-1362</p>
                <p>You received this email because you are subscribed to the Compliance Edge Newsletter.</p>
                <spacer size="16"></spacer>
                <p>DocMagic sends a variety of emails to our clients | View our <a href="https://www.docmagic.com/privacy-policy">privacy policy</a>.</p>
                <p>If you prefer not to receive certain of communications, you can <a href="https://info.docmagic.com/hs/manage-preferences/unsubscribe">click here</a> to update your email preferences.</p>
                <p class="consider-environment">Please consider the environment before printing this email.</p>
            </columns>
        </row>
    </wrapper>
</container>
<spacer size="40"></spacer>
</wrapper>
</body>
</html>
{% endfilter %}
